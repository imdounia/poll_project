{% extends 'base.html.twig' %}

{% block title %}Questions index{% endblock %}

{% block body %}
<main style="margin: 10%; text-align:center">
    <h1>Questions index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Question</th>
                <th>Is_multiple</th>
                <th>Answer Poll</th>
                <th>Update answer</th>
                <th>Show results</th>
                <th>Update</th>
            </tr>
        </thead>
        <tbody>
        {% for question in questions %}
            <tr>
                <td>{{ question.id }}</td>
                <td>{{ question.textQuestion }}</td>
                <td>{{ question.isMultiple ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('questions_show', {'id': question.id}) }}">Answer</a>
                </td>
                <td>
                    <a href="{{ path('reponses_index', {'id': question.id}) }}">update</a>
                </td>
                <td>
                    <a href="{{ path('questions_results', {'id': question.id}) }}">Results</a>
                </td>
                <td>
                    <a href="{{ path('questions_edit', {'id': question.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('questions_new') }}">Create new question</a>

    </main>
{% endblock %}
